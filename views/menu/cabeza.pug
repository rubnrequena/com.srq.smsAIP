// Header
#header
  .color-line
  #logo.light-version
    span
      | mSRQ
  nav(role='navigation')
    .header-link.hide-menu
      i.fa.fa-bars
    .small-logo
      span.text-primary mSRQ
    form.navbar-form-custom(role='search' method='get' action='#')
      .form-group
        input.form-control(type='text' placeholder='Buscas algo en especial?' name='search')
    .mobile-menu
      button.navbar-toggle.mobile-menu-toggle(type='button' data-toggle='collapse' data-target='#mobile-collapse')
        i.fa.fa-chevron-down
      #mobile-collapse.collapse.mobile-navbar
        ul.nav.navbar-nav
          li
            a(href='/login') Login
          li
            a(href='/logout') Logout
          li
            a(href='/perfil') Perfil
    .navbar-right
      ul.nav.navbar-nav.no-borders        
        li.dropdown
          a(href='/logout')
            i.pe-7s-upload.pe-rotate-90