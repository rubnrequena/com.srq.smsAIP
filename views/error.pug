block content
  .color-line
  .back-link
    a.btn.btn-primary(href="index.html") Back to Dashboard
  .error-container
    i.pe-7s-way.text-success.big-icon
    h1= error.status
    strong= message
    br
    if error.status="401"
      a.btn.btn-xs.btn-success(href="/login")
        | Iniciar Sesi√≥n
    else    
      a.btn.btn-xs.btn-success(href="/") Regresar al inicio
    if (error.stack)  
      pre #{error.stack}